#pragma once
#include "ResourceManager.vxx"

struct VSLogHandle {};

struct LoggerController {
	field(Handle, static_cast<VSLogHandle*>(nullptr));

public:
	auto Eject() const {
		auto LoggerDescriptor = reinterpret_cast<std::intptr_t>(Handle);
		return VaporGlobals::API->removeMessageHandler(~static_cast<int>(LoggerDescriptor)) != 0;
	}
	operator auto() const {
		return Handle;
	}
};